<%= form_for @part do |f| %>
  <% if @part.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@part.errors.count, "error") %> prohibited
      this part from being saved:</h2>
    <ul>
    <% @part.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
 
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.text_area :quantity %>
  </div>

  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_area :price %>
  </div>

  <div class="field">
    <%= f.label :link %><br>
    <%= f.text_area :link %>
  </div>

  <div class="field">
    <%= f.label :category %>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
    <%# f.collection_select :category_id, Category.all.collect,  :id, :name %>
    <%# f.collection_select :category, Category.all, :id, :name, {:prompt => 'Please select a category...'} %>
  </div>

  <div class="field">
    <%= f.label :requested %> 
    <%= f.check_box :requested, {}, true, false %> <br />
  </div>
 
  <p>
    <%= f.submit 'Submit', :class => 'btn btn-default' %>
  </p>
<% end %>